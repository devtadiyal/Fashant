<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fashantapp.login.ForgotPassword">


    <Button
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/back" />

    <TextView
        android:id="@+id/skip_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/back_button"
        android:textColor="#87CEFA"
        android:visibility="invisible"
        android:layout_alignBottom="@+id/back_button"
        android:layout_toEndOf="@+id/textView7"
        android:layout_toRightOf="@+id/textView7"
        android:text="Skip" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@+id/skip_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:text="Forgot Password ?"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView7"

        android:textColor="#696969"
        android:textSize="15sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Please enter your registered Mobile No or Email ID." />

    <EditText
        android:id="@+id/number"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView8"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:ems="10"
        android:backgroundTint="#000000"
        android:inputType="textPersonName"
        android:hint="Enter Mobile No or Email ID" />

    <Button
        android:id="@+id/button2"
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:layout_below="@+id/number"

        android:layout_gravity="center"
        android:background="#000"
        android:gravity="center"

        android:textColor="#fff"
        android:textSize="22sp"
        android:textStyle="bold"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"
        android:text="Next" />


</RelativeLayout>
